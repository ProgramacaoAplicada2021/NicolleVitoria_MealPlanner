<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@drawable/fundosubs"
    android:orientation="vertical"
    tools:context=".ui.activity.SubstituicoesActivity">

    <TextView
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="20dp" />

    <Button
        android:id="@+id/botao_ptn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#BAD86960"
        android:text="Proteína"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/botao_carbo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#F3E56D"
        android:text="Carboidrato"
        android:textAlignment="center"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/botao_hortA"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#AEEC68"
        android:text="Hortaliça A" />

    <Button
        android:id="@+id/botao_hortB"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#DAA557"
        android:text="Hortaliça B" />
</LinearLayout>